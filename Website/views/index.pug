doctype html
html
  head
    title= 'Piggah Bro Studios | '+ title

    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="icon" type="image/x-icon" href="favicon.ico")

    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='/css/ionicons.min.css')
    style.
        page {
            position: relative;
            top: auto;
            left: auto;
            height: calc(100vh - 4em);
        }
  body(style="overflow: hidden")
    nav
        span#nav-cls(onclick = "navClose()") Close 
            i.icon.ion-close-round
        a(href='http://' + url) Home
        a(href='http://account.' + url) My Account
        a(href='http://blog.' + url) Blog
        a(href='http://gaming.' + url) Gaming
        a(href='http://account.' + url + '/signin') Sign in / Sign out
        a(href='http://account.' + url + '/signup') Signup
    span(style="display: block; width: calc(100% + 16px); height: 100vh; overflow-y: scroll;")
        page(style="position: absolute; top: 0; left: 0;")
            span#title(style="display: table; position: absolute; font-size: 1.25em;")
                div#logo(style="display: inline-block; vertical-align: middle; height: 240px; width: 240px;")
                div(style="display: inline-block; text-align: center; font-size: 1.25em; vertical-align: middle; margin-left: 50px;")
                    h1 Piggah Bro Studios
                    h3 Web and Game<br>Development
            span(style="display: block; position: absolute; bottom: 25px; left: calc(50% - 60px); width: 120px; text-align: center; font-size: 1.25em;")
                h3 Scroll Down
                    br
                    i.icon.ion-chevron-down
        span#p2(style="top: 100vh;left: 0;position: absolute;width: 100%;height: 100vh;background-color: #fff;transition-duration: 1.5s;transition-timing-function: ease-in-out;")
            bar
                span#nav-btn(onclick = "navOpen()")
                    i.icon.ion-navicon-round
                a.title(href="http://" + url) Piggah Bro Studios
            page(style="height: calc(100vh - 50px - 4em);")
                h1=title
                p Welcome to our #{title} page
    script(src="/js/p5.min.js" type="text/javascript")
    script(src="/js/logo.js" type="text/javascript")
    script(src="/js/page.js" type="text/javascript")
    script.
         document.getElementById('title').style.top = 'calc(40vh - ' + document.getElementById('title').getBoundingClientRect()['height'] / 2 + 'px)';
         document.getElementById('title').style.left = 'calc(50% - ' + document.getElementById('title').getBoundingClientRect()['width'] / 2 + 'px)';
         window.addEventListener('wheel', function(e) {
            let pg = document.getElementById('p2');
            if (e.deltaY < 0 && pg.style.top == '0px') {
                pg.style.top = "100vh";
            } else if (e.deltaY > 0 && pg.style.top == '100vh') {
                pg.style.top = "0px";
            }
         });