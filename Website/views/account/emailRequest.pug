extends layout

block content
    link(rel="stylesheet" href="/css/account.css")
    page
        form(action="" method="POST")
            h1 Forgot Password
            h3(style="font-variant-caps: small-caps;") Bulmer Solutions
            if error
                br
                err(style="color: #f00; font-size: 0.9em; text-align: center; display: block;") #{error}
            br
            input(placeholder="Email" type="email" name="email" required)
            input(type="submit" value="Next" style="display: inline-block; background-color: #555555; color: #ffffff; width: 25%; min-width: 100px; margin: 5px; margin-right: calc(10% + 10px); float: right;")