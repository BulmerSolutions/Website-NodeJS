nav
    span#nav-cls(onclick = "navClose()" style="position: absolute;") Close 
        i.fa.fa-times
    - var http = (config.https) ? 'https://':'http://'
    a(href= http + config.URL) Home
    a(href= http + 'blog.' + config.URL) Blog
    a(href= http + 'store.' + config.URL) Store
    br
    a(href= http + 'gaming.' + config.URL) Gaming
    //- Adjusting nav based on if user is signed in
    br
    if user
        a(href= http + 'account.' + config.URL) My Account
        a(href= http + 'account.' + config.URL + '/logout') Logout
    else
        a(href= http + 'account.' + config.URL + '/signin') Sign In
        a(href= http + 'account.' + config.URL + '/signup') Sign Up
    span(style="bottom: 15px; left: 0; top: auto; padding: 0 15px; text-align: center; width: calc(100% - 30px);")#policy
        a(href= http + config.URL + '/policy/privacy') &nbsp;Privacy&nbsp;
        | &bull;
        a(href= http + config.URL + '/policy/cookies') &nbsp;Cookies&nbsp;
        | &bull;
        a(href= http + config.URL + '/policy/terms') &nbsp;Terms&nbsp;